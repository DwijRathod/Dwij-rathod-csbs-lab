#include<stdio.h>

int main(void)
{
    float ns,gs,ns2,ns3;
    
    printf("enter gross sales : ");
    scanf("%f",&gs);
    
    ns=gs-(gs*0.15);
    ns2=gs-(gs*0.10);
    ns3=gs-(gs*0.05);
    
    if (gs>20000)
        printf("net sales is : %f\n",ns);
    
    else if (gs>10000 && gs<=20000)
        printf("net sales is : %f\n",ns2);
    
    else if (gs<5000)
    printf("net sales is : %f\n",ns3);
    
    return 0;
}

